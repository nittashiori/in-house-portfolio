---
interface Props {
  id?: string;
  name?: string;
  rows?: string;
  cols?: string;
  placeholder?: string;
  value?: string;
  error?: boolean;
  disabled?: boolean;
  full?: boolean;
  width?: string;
}

const {
  id = '',
  name = '',
  rows = '',
  cols = '',
  placeholder = '',
  value = '',
  error = false,
  disabled = false,
  full = false,
  width = ''
} = Astro.props;
---
<textarea
  class=`c-textarea ${ disabled ? 'disabled' : '' } ${ error ? 'error' : '' }`
  style={`${cols ? 'max-width: initial; width: auto;' : full ? 'max-width: 100%;' : width ? `max-width: ${width}; width: 100%` : ''}`}
  id={id}
  name={name}
  rows={rows}
  cols={cols}
  placeholder={placeholder}
  disabled={disabled}
>
{value}
</textarea>

<style>
  .c-textarea {
    width: 100%;
    max-width: 240px;
    padding: var(--space-1-5) var(--space-2);
    background: var(--color-backgound-default);
    border: 1px solid var(--color-border-default);
    border-radius: var(--round-s);

    &::placeholder {
      color: var(--color-foreground-place-holder);
    }

    &.error {
      border: 1px solid var(--color-border-alert);
    }

    &.disabled {
      background: var(--color-background-disabled);
      color: var(--color-foreground-disabled);
    }
  }
</style>