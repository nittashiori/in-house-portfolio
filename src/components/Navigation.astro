---
import Stack from "./Stack.astro";
import Typography from "./Typography.astro";
import Button from "./Button.astro";
---
<nav class="c-navigation">
  <ul class="lists">
    <li>
      <Button href="#profile" style="ghost" size="small">プロフィール</Button>
    </li>
    <li>
      <Button href="#skill" style="ghost" size="small">スキル</Button>
    </li>
    <li>
      <Button href="#consult" style="ghost" size="small">相談できること</Button>
    </li>
    <li>
      <Button href="#works" style="ghost" size="small">制作物</Button>
    </li>
  </ul>
</nav>

<style>
  .c-navigation {
    width: 100vw;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 0;

    .lists {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.8rem;
      padding: calc(var(--space-l) * 2) var(--space-s) var(--space-s);
      width: 32vw;
      min-width: 200px;
      transform-origin: top right;
      position: absolute;
      top: 0.8rem;
      right: 0.8rem;
      z-index: -2;

      &::after {
        content: "";
        width: 100%;
        height: 100%;
        background: var(--color-overlay-background);
        box-shadow: var(--shadow-xl);
        border-radius: var(--round-l);
        position: absolute;
        top: 0;
        right: 0;
        z-index: -1;
      }
    }

    .lists li,
    .lists li a {
      width: 100%;
    }

    &.is-expanded {
      display: block;

      .lists {
        opacity: 1;
        scale: 1;
      }
    }

    @media screen and (min-width: 768px) {
      display: block;

      .lists {
        flex-direction: row;
        align-items: flex-start;
        padding: 0;
        width: 100%;
        position: relative;
        top: auto;
        right: auto;
        &::after {
          display: none;
        }
      }

      .lists li,
      .lists li a {
        width: auto;
      }
    }
  }
</style>