---
interface Props {
  width?: string;
  height?: string;
}

const {
  width = '100%',
  height = '1em',
} = Astro.props;
---
<div
  class="c-skelton"
  style={{ width: width ? `${width}` : 'auto', height: height ? `${height}` : 'auto' }}
/>

<style>
  .c-skelton {
    --skeleton-start-color: var(--color-gray-1);
    --skeleton-end-color: var(--color-gray-3);
    
    border-radius: 4px;
    pointer-events: none;
    animation: 0.8s linear 0s infinite alternate none running skeleton;
  }

  @keyframes skeleton {
  0% {
    border-color: var(--skeleton-start-color);
    background: var(--skeleton-start-color);
  }
  100% {
    border-color: var(--skeleton-end-color);
    background: var(--skeleton-end-color);
  }
}
</style>