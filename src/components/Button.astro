---
interface Props {
  variants?: 'default' | 'primary' | 'success' | 'warning' | 'alert';
  style?: 'solid' | 'outline' | 'ghost' | 'link';
  disabled?: boolean;
  size?: 'xsmall' | 'small' | 'medium' | 'large' | 'full';
	href?: string;
  type?: 'button' | 'submit' | 'reset';
}

const {
  variants = 'default',
  style = 'solid',
  disabled = false,
  size = 'medium',
  href,
  type = 'button'
} = Astro.props;
---
{ href ?
  <a class={`c-button ${variants} ${style} ${size} ${disabled ? disabled : ''}`} href={href}>
    <slot />
  </a>
  :
  <button class={`c-button ${variants} ${style} ${size} ${disabled ? disabled : ''}`} type={type} disabled={disabled}>
    <slot />
  </button>
}

