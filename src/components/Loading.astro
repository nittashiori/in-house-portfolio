---
import Catch from "./Catch.astro"
---
<div class="c-loading">
  <Catch isLoading />
</div>

<style>
  .c-loading {
    width: 100vw;
    height: 100svh;
    display: grid;
    place-items: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    background: var(--color-background-default);

    &.is-hidden {
      display: none;
    }
  }
</style>